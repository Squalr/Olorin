// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build olorin-cli (Android)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "ndk",
                "--platform",
                "21",
                "--target",
                "aarch64-linux-android",
                "build",
                "--bin",
                "olorin-cli"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
    ]
}