import { DataTypeIconView } from "../view_model_bindings.slint";

export component DataTypeIconConverter {
    public pure function data_type_source(data_type_view: DataTypeIconView) -> image {
        if (data_type_view == DataTypeIconView.i8) {
            return @image-url("./../images/data_types/blue_blocks_1.png");
        } else if (data_type_view == DataTypeIconView.u8) {
            return @image-url("./../images/data_types/purple_blocks_1.png");
        } else if (data_type_view == DataTypeIconView.i16) {
            return @image-url("./../images/data_types/blue_blocks_2.png");
        } else if (data_type_view == DataTypeIconView.u16) {
            return @image-url("./../images/data_types/purple_blocks_2.png");
        } else if (data_type_view == DataTypeIconView.i32) {
            return @image-url("./../images/data_types/blue_blocks_4.png");
        } else if (data_type_view == DataTypeIconView.u32) {
            return @image-url("./../images/data_types/purple_blocks_4.png");
        } else if (data_type_view == DataTypeIconView.i64) {
            return @image-url("./../images/data_types/blue_blocks_8.png");
        } else if (data_type_view == DataTypeIconView.u64) {
            return @image-url("./../images/data_types/purple_blocks_8.png");
        } else if (data_type_view == DataTypeIconView.f32) {
            return @image-url("./../images/data_types/orange_blocks_4.png");
        } else if (data_type_view == DataTypeIconView.f64) {
            return @image-url("./../images/data_types/orange_blocks_8.png");
        } else if (data_type_view == DataTypeIconView.bytes) {
            return @image-url("./../images/data_types/blue_blocks_array.png");
        } else if (data_type_view == DataTypeIconView.string) {
            return @image-url("./../images/data_types/string.png");
        }
        return @image-url("./../images/data_types/unknown.png");
    }
}
