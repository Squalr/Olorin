import { HorizontalBox, VerticalBox, Palette, GridBox } from "std-widgets.slint";

import { Theme } from "./../theme.slint";

import { ContextMenu } from "./../components/context_menu/context_menu.slint";
import { Button } from "../components/buttons/button.slint";
import { DataTypeIconConverter } from "../converters/data_type_icon_converter.slint";
import { DataTypeIconView } from "../view_model_bindings.slint";

export component DataTypeButton inherits Button {
    in property <string> text;
    in property <DataTypeIconView> icon;
    data_type_icon_converter := DataTypeIconConverter { }

    HorizontalLayout {
        HorizontalBox {
            Image {
                width: 16px;
                height: 16px;
                horizontal-alignment: center;
                vertical-alignment: center;
                source: data_type_icon_converter.data_type_source(root.icon);
            }

            Text {
                color: Theme.foreground;
                horizontal-alignment: left;
                vertical-alignment: center;
                text: root.text;
            }
        }
    }
}
